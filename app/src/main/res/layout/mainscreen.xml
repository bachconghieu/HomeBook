<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
         android:scrollbarStyle="outsideOverlay"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linelarlayout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/headersearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Where Would You"
                        android:textSize="30dp" />

                    <TextView
                        style="@style/headersearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Like to Go ?"
                        android:textSize="30dp" />
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/visual1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp">

                    <com.google.android.material.textfield.TextInputLayout
                        style="@style/parentt"
                        android:layout_marginTop="@dimen/signup_text_margin_top">

                        <EditText
                            android:id="@+id/edt_search"
                            style="@style/modifiedEditText"
                            android:layout_marginLeft="30dp"
                            android:hint="Search"
                            android:inputType="text"
                            android:maxLines="1" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        style="@style/loginButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginStart="270dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="16dp"
                        android:text="Find"
                        android:textAlignment="center"
                        android:textAllCaps="false" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <HorizontalScrollView
                        android:layout_width="fill_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentTop="true"
                        android:fillViewport="true"
                        android:measureAllChildren="false"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="50dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="30dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent">

                                    <ToggleButton
                                        android:id="@+id/toggle_hotel"
                                        android:layout_width="120dp"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:background="@drawable/custom_toggle"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textOff="Hotel"
                                        android:textOn="Hotel" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="50dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="match_parent"
                                    android:onClick="sontung">

                                    <ToggleButton
                                        android:layout_width="120dp"
                                        android:id="@+id/toggle_apartment"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:background="@drawable/custom_toggle"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textOff="Apartment"
                                        android:textOn="Apartment" />
                                </RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"></RelativeLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="60dp"
                                android:gravity="center"
                                android:orientation="vertical">

                                <RelativeLayout
                                    android:layout_width="fill_parent"
                                    android:layout_height="match_parent">

                                    <ToggleButton
                                        android:layout_width="120dp"
                                        android:id="@+id/toggle_homestays"
                                        android:layout_height="match_parent"
                                        android:layout_alignParentBottom="true"
                                        android:background="@drawable/custom_toggle"
                                        android:textAlignment="center"
                                        android:textAllCaps="false"
                                        android:textColor="@color/white"
                                        android:textOff="Homestays"
                                        android:textOn="Homestays" />
                                </RelativeLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </HorizontalScrollView>
                </LinearLayout>

                <RelativeLayout
                    android:id="@+id/visual2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:gravity="center_vertical"
                        >

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/ds_homebook"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"

                            />
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/visual3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        style="@style/headersearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text="Populer hotel"
                        android:textColor="#797B7C"
                        android:textSize="30dp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/visual4"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp"
                    tools:context=".MainActivity">
                    <LinearLayout
                        android:id="@+id/poLay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/ds_favo_homebook"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" />

                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>
